{
  "name": "Java 21 + Maven",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/java:1": { "version": "21" },
    "ghcr.io/devcontainers/features/maven:1": { "version": "3.9" }
  },
  "forwardPorts": [8080],
  "postCreateCommand": "mvn -v && java -version"
}
